# DeltaStream Authentication
# Get your API token from: https://app.deltastream.io/integrations
DELTASTREAM_API_TOKEN=your_api_token_here

# Get your Organization ID from: https://app.deltastream.io/settings
DELTASTREAM_ORG_ID=your_org_id_here

# Kafka Store Configuration
# Kafka broker URLs (comma-separated if multiple)
KAFKA_URIS=localhost:9092
# For Docker Compose setup:
# KAFKA_URIS=kafka1:9194,kafka2:9294,kafka3:9394

# Schema Registry (optional, for Avro/Protobuf)
KAFKA_SCHEMA_REGISTRY_URL=http://localhost:8081

# PostgreSQL Configuration (for dimension tables via CDC)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DATABASE=online_retail

# Iceberg/S3 Configuration (for bronze layer persistence)
S3_BUCKET=your-s3-bucket-name
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ClickHouse Configuration (optional, for gold layer serving)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Environment Settings
# Set to 'dev' or 'prod'
DBT_TARGET=dev
